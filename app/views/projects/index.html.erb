<h1>All Your Projects</h1>

<h2>Frequently Visited</h2>

<h2>All Your Projects</h2>
<% @projects.each do |project| %>
  <div class="responsive">
    <%= link_to project_path(project) do %>
      <div class="gallery">
        <%# Project Name should be dynamic %>
        <%= image_tag("avatar.jpg") %>
        <div class="desc"><%= truncate(project.name, length:50) %></div>
      </div>
    <% end %>
  </div>
<% end %>

<div class="clearfix"></div>

<%= link_to "New Project", (new_project_path if policy(Project).new?), class: "button-main"%>
